<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    android:backgroundTint="#6A6161">

    <ImageView
        android:background="@color/design_default_color_primary"
        android:id="@+id/itemAlbum_imgAlbum"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"/>


    <TextView
        android:id="@+id/itemAlbum_txtAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/itemAlbum_imgAlbum"
        app:layout_constraintEnd_toEndOf="@id/itemAlbum_imgAlbum"
        app:layout_constraintTop_toBottomOf="@id/itemAlbum_imgAlbum"
        android:text="Title Album"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/itemAlbum_txtCaSi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/itemAlbum_txtAlbum"
        app:layout_constraintEnd_toEndOf="@id/itemAlbum_txtAlbum"
        app:layout_constraintTop_toBottomOf="@id/itemAlbum_txtAlbum"
        android:text="Title Album"
        android:paddingTop="5dp"
        android:textColor="#5E5555"
        android:textSize="16sp"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>